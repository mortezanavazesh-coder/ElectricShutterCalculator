    <!-- رنگ‌های عمومی -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="blue">@color/colorPrimary</color>
    <color name="cream">@color/colorSecondary</color>
    <color name="green">@color/colorFinalPrice</color>
    <color name="red">#F44336</color>

    <!-- رنگ‌های آیکن‌ها -->
    <color name="colorIconAdd">@color/colorPrimary</color>           <!-- آیکن افزودن آبی -->
    <color name="colorIconEdit">@color/colorSecondary</color>        <!-- آیکن ویرایش کرم -->
    <color name="colorIconDelete">@color/colorSecondary</color>      <!-- آیکن حذف کرم -->
</resources>
