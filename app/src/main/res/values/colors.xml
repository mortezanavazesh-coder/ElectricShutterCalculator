<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- رنگ‌های اصلی -->
    <color name="colorPrimary">#2196F3</color>          <!-- آبی -->
    <color name="colorSecondary">#FFE0B2</color>        <!-- کرم -->
    <color name="colorOnPrimary">#FFFFFF</color>        <!-- متن روی آبی -->
    <color name="colorOnSecondary">#000000</color>      <!-- متن روی کرم -->

    <!-- رنگ‌های پس‌زمینه -->
    <color name="colorBackground">#121212</color>       <!-- پس‌زمینه کلی اپ -->
    <color name="colorCardBackground">#121212</color>   <!-- پس‌زمینه کارت و دیالوگ -->
    <color name="colorCardStroke">#1E1E1E</color>       <!-- خط دور کارت -->
    <color name="colorSurface">#1E1E1E</color>          <!-- سطح کارت/دیالوگ -->
    <color name="colorSurfaceStroke">#333333</color>    <!-- خط دور سطح -->

    <!-- رنگ‌های متن -->
    <color name="colorTextPrimary">#FFFFFF</color>      <!-- متن اصلی سفید -->
    <color name="colorTextHint">#B0B0B0</color>         <!-- متن راهنما خاکستری -->
    <color name="colorTextSecondary">#808080</color>    <!-- متن فرعی خاکستری -->
    <color name="colorCardTitle">@color/colorSecondary</color> <!-- عنوان کارت کرم -->

    <!-- رنگ‌های خاص -->
    <color name="colorFinalPrice">#4CAF50</color>       <!-- قیمت نهایی سبز -->
