<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- متن‌های اصلی -->
    <style name="BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- متن قیمت نهایی -->
    <style name="TextFinalPrice" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorFinalPrice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- متن قطر رول -->
    <style name="TextRollDiameter" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorRollDiameter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="strokeColor">@color/colorCardStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
    </style>

    <!-- تکست‌باکس -->
    <style name="Widget.App.TextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.App.TextBox.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:hint">@string/hint_default</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- EditText ساده -->
    <style name="Widget.App.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:hint">@string/hint_default</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Spinner -->
    <style name="Widget.App.Spinner" parent="Widget.App.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- CheckBox -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- متن قیمت نهایی (برای بعضی layoutها) -->
    <style name="FinalPriceText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorFinalPrice</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- شماره مشتری (سفید عمومی) -->
    <style name="CustomerNumberText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- شماره موبایل فقط در صفحه ریز گزارش (آبی) -->
    <style name="CustomerPhoneReportText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- تاریخ گزارش -->
    <style name="DateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- عنوان آیتم‌ها -->
    <style name="TitleText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- متن خاص آبی -->
    <style name="SpecialText.Blue" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- شکل گرد مشترک -->
    <style name="Shape.Round8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- تم اختصاصی دیالوگ متریال (Material 2) -->
    <style name="AppAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- بک‌گراند دیالوگ -->
        <item name="android:background">@color/colorCardBackground</item>

        <!-- حذف حاشیه‌های پیش‌فرض -->
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetTop">0dp</item>
        <item name="backgroundInsetBottom">0dp</item>

        <!-- گوشه‌های گرد -->
        <item name="shapeAppearanceOverlay">@style/Shape.Round8</item>

        <!-- متن‌ها -->
        <item name="materialAlertDialogBodyTextStyle">@style/BodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleText</item>
    </style>

</resources>
