<resources>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <!-- رنگ پس‌زمینه کارت -->
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <!-- خط دور کارت -->
        <item name="strokeColor">@color/colorSurfaceStroke</item>
        <item name="strokeWidth">1dp</item>
        <!-- سایه -->
        <item name="cardElevation">6dp</item>
        <!-- فاصله و padding -->
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <!-- گوشه‌های گرد -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
        <!-- جلوگیری از تاریک شدن کارت‌ها -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- شکل کارت‌ها -->
    <style name="ShapeAppearanceOverlay.App.Card">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- fallback عمومی -->
    <style name="ShapeAppearanceOverlay.App">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- fallback اصلی -->
    <style name="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- متن‌های عمومی -->
    <style name="TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- متن‌های خاص -->
    <style name="SpecialText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SpecialText.Green" parent="SpecialText">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Blue" parent="SpecialText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SpecialText.Date" parent="SpecialText">
        <item name="android:textColor">@color/cream</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
