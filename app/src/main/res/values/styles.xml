<resources>

    <!-- تم اصلی اپ -->
    <style name="Theme.ElectricShutterCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌ها -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- متن‌ها -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Title</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Body</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BodySecondary</item>

        <!-- دکمه‌ها -->
        <item name="materialButtonStyle">@style/Widget.App.PrimaryButton</item>

        <!-- کارت‌ها -->
        <item name="materialCardViewStyle">@style/Widget.App.MaterialCard</item>
    </style>

    <!-- تیترها (سفید) -->
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- متن‌های معمولی (سفید) -->
    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- متن‌های ثانویه -->
    <style name="TextAppearance.BodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- دکمه‌ها (زمینه آبی، متن سفید) -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- کارت‌ها (لبه گرد + بوردر سفید نازک) -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <!-- استایل‌های خاص برای موارد استثنا -->
    <style name="SpecialText.Green">
        <item name="android:textColor">@color/colorSuccess</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpecialText.Blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Date">
        <item name="android:textColor">@color/cream</item> <!-- رنگ کرم -->
        <item name="android:textStyle">bold</item>
    </style>

</resources>
