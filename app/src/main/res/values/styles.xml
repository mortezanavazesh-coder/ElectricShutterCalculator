<resources>

    <!-- متن‌های اصلی -->
    <style name="BodyText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- تیتر کارت‌ها -->
    <style name="TitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- استایل پایه برای متن‌های خاص -->
    <style name="SpecialText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- نسخه‌های فرعی SpecialText -->
    <style name="SpecialText.Blue" parent="SpecialText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Green" parent="SpecialText">
        <item name="android:textColor">@color/colorSuccess</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Date" parent="SpecialText">
        <item name="android:textColor">@color/cream</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- کارت عمومی (بدون خط دور) -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <!-- کارت مخصوص ریز گزارش (با خط سفید نازک) -->
    <style name="Widget.App.ReportCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <!-- دکمه‌ها -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
