<resources>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">2dp</item> <!-- برجستگی خیلی خفیف -->
        <item name="strokeColor">@color/colorSurfaceStroke</item> <!-- لبه روشن‌تر -->
        <item name="strokeWidth">1dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- شکل کارت‌ها -->
    <style name="ShapeAppearanceOverlay.App.Card">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- متن‌های عمومی -->
    <style name="TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorOnSurface</item> <!-- سفید -->
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item> <!-- سفید -->
    </style>

    <!-- متن‌های خاص -->
    <style name="SpecialText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpecialText.Green" parent="SpecialText">
        <item name="android:textColor">@color/green</item> <!-- سبز قیمت نهایی و قطر رول -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Blue" parent="SpecialText">
        <item name="android:textColor">@color/blue</item> <!-- شماره موبایل -->
    </style>

    <style name="SpecialText.Date" parent="SpecialText">
        <item name="android:textColor">@color/cream</item> <!-- تاریخ کرم رنگ -->
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Divider مخصوص ریز گزارشات -->
    <style name="Widget.App.ReportDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorSurfaceStroke</item> <!-- خط جداکننده خاکستری روشن‌تر -->
        <item name="android:layout_marginVertical">6dp</item>
    </style>

    <!-- Alias -->
    <style name="Widget.App" parent="Widget.App.MaterialCard" />

</resources>
