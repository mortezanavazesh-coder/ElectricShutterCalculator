<resources>

    <!-- متن‌های اصلی -->
    <style name="BodyText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- تیتر کارت‌ها -->
    <style name="TitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- متن‌های خاص -->
    <style name="SpecialText.Blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Date">
        <item name="android:textColor">@color/cream</item>
    </style>

    <style name="SpecialText.Green">
        <item name="android:textColor">@color/colorSuccess</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <!-- دکمه‌ها -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
