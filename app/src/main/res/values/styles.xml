<resources>

    <!-- پایه -->
    <style name="App" parent="Theme.ShutterCalculator"/>

    <!-- کانتینر صفحه -->
    <style name="App.PageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/space_sm</item>
        <item name="android:background">?attr/colorBackground</item>
    </style>

    <!-- سکشن صفحه -->
    <style name="App.PageSection">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- کارت متریال -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- تیتر کارت -->
    <style name="CardTitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- متن بدنه -->
    <style name="BodyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- متن قیمت نهایی (یکسان در همه صفحات) -->
    <style name="FinalPriceText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ورودی‌ها -->
    <style name="Widget.App.TextBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"/>
    <style name="Widget.App.TextBox.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <!-- رنگ متن اصلی -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- رنگ hint -->
        <item name="android:hintTextColor">#80FFFFFF</item>
    </style>

    <!-- اسپینر -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner"/>

    <!-- چک‌باکس -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- دکمه آیکون -->
    <style name="Widget.App.IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>

    <!-- متن شماره مشتری -->
    <style name="CustomerNumberText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- متن تاریخ -->
    <style name="DateText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- متن قطر رول -->
    <style name="TextRollDiameter" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- تیتر عمومی -->
    <style name="TitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- متن خاص (آبی) -->
    <style name="SpecialText.Blue" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">#1976D2</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
