<resources>

    <!-- استایل پایه برای متن‌های خاص -->
    <style name="SpecialText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpecialText.Green" parent="SpecialText">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Blue" parent="SpecialText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SpecialText.Date" parent="SpecialText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
    </style>

    <!-- شکل کارت‌ها -->
    <style name="ShapeAppearanceOverlay.App.Card" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Divider مخصوص ریز گزارشات -->
    <style name="Widget.App.ReportDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginVertical">6dp</item>
    </style>

</resources>
