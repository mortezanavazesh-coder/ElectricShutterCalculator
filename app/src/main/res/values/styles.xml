<resources>

    <!-- کانتینر صفحه -->
    <style name="App.PageContainer" parent="Widget.Material3.LinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/space_md</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- بخش‌های صفحه -->
    <style name="App.PageSection" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginBottom">@dimen/space_sm</item>
        <item name="android:background">@color/colorSurface</item>
    </style>

    <!-- اسپینر -->
    <style name="Widget.App.Spinner" parent="Widget.Material3.Spinner">
        <item name="android:padding">@dimen/space_sm</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- دکمه ثانویه -->
    <style name="Widget.App.SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:background">@color/colorSurface</item>
    </style>

    <!-- عنوان کارت -->
    <style name="CardTitleText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- متن بدنه کارت -->
    <style name="BodyText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- باکس ورودی -->
    <style name="Widget.App.TextBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- فیلد ورودی داخل باکس -->
    <style name="Widget.App.TextBox.EditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
    </style>

</resources>
