<resources>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- دکمه ثانویه -->
    <style name="Widget.App.SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- کارت‌ها -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView">
        <item name="android:background">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- چک‌باکس -->
    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

</resources>
