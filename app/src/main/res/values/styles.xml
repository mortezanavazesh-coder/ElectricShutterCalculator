<resources>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="strokeColor">@color/colorSurfaceStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- شکل کارت‌ها -->
    <style name="ShapeAppearanceOverlay.App.Card">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- ⚠️ اضافه شدن دوباره برای سازگاری -->
    <style name="ShapeAppearanceOverlay.App">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- چک‌باکس -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- اسپینر -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorOnSurfaceSecondary</item>
        <item name="android:background">@color/colorSurface</item>
        <item name="android:popupTheme">@style/Widget.App.Spinner.Popup</item>
        <item name="android:drawableEnd">@drawable/spinner_arrow_white</item>
    </style>

    <style name="Widget.App.Spinner.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorSurface</item>
    </style>

    <!-- EditText عمومی -->
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHint">@color/colorOnSurfaceSecondary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- TextInputLayout بدون override رنگ خط -->
    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <!-- حذف boxStrokeColor تا رنگ پیش‌فرض متریال (خاکستری/آبی) فعال شود -->
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- متن‌های عمومی -->
    <style name="AppTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleText" parent="AppTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cream</item>
    </style>

    <style name="BodyText" parent="AppTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="SpecialText" parent="AppTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="SpecialText.Green" parent="SpecialText">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Blue" parent="SpecialText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SpecialText.Date" parent="SpecialText">
        <item name="android:textColor">@color/cream</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
