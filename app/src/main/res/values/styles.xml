<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- استایل متن‌ها -->
    <style name="BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item> <!-- سفید -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorCardTitle</item> <!-- کرم -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorDate</item> <!-- کرم روشن -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomerNumberText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorCustomerNumber</item> <!-- آبی روشن -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FinalPriceText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorFinalPrice</item> <!-- سبز -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- استایل کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="strokeColor">@color/colorCardStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- استایل دکمه‌ها -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item> <!-- آبی -->
        <item name="android:textColor">@color/colorTextPrimary</item> <!-- سفید -->
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- استایل ورودی‌ها -->
    <style name="Widget.App.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/colorTextPrimary</item> <!-- سفید -->
        <item name="android:hintTextColor">@color/colorTextHint</item> <!-- خاکستری روشن -->
    </style>

    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorCardBackground</item> <!-- مشکی روشن‌تر -->
        <item name="hintTextColor">@color/colorTextHint</item>
    </style>

    <!-- استایل اسپینر -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/colorCardBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- استایل چک‌باکس -->
    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="buttonTint">@color/colorPrimary</item>
    </style>

</resources>
