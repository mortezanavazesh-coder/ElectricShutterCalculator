<resources>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="strokeColor">@color/colorCardStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">6dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- عنوان کارت -->
    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- متن عمومی -->
    <style name="BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorCardBackground</item>
        <item name="boxStrokeColor">@color/colorCardStroke</item>
        <item name="hintTextColor">@color/colorTextHint</item>
    </style>

    <!-- TextInputEditText -->
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Spinner -->
    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:popupTheme">@style/Widget.App.Spinner.Popup</item>
    </style>

    <style name="Widget.App.Spinner.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:background">@color/colorCardBackground</item>
    </style>

    <!-- دکمه‌ها -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- متن‌های خاص -->
    <style name="FinalPriceText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorFinalPrice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomerNumberText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorCustomerNumber</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorDate</item>
    </style>

</resources>
