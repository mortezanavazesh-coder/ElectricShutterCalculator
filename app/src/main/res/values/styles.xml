<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- متن اصلی -->
    <style name="TextPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- متن راهنما -->
    <style name="TextHint" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- عنوان بخش یا کارت -->
    <style name="TextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorCardTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- متن قیمت نهایی -->
    <style name="TextFinalPrice" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorFinalPrice</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- متن تاریخ -->
    <style name="TextDate" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorDate</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- شماره مشتری -->
    <style name="TextCustomerNumber" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorCustomerNumber</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
