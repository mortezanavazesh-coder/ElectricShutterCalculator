<resources>
    <!-- متن‌ها -->
    <style name="BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TitleText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- دکمه اصلی -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="strokeColor">@color/colorCardStroke</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- شکل گرد -->
    <style name="Shape.Round8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- برای رفع ارجاع‌های قدیمی -->
    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- دیالوگ -->
    <style name="AppAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/colorCardBackground</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Round8</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleText</item>
    </style>
</resources>
