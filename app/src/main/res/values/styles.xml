<resources>

    <!-- کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="strokeColor">@color/colorSurfaceStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">6dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- شکل کارت‌ها -->
    <style name="ShapeAppearanceOverlay.App.Card">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- متن عمومی -->
    <style name="AppTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <!-- متن‌های خاص -->
    <style name="TitleText" parent="AppTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cream</item>
    </style>

    <style name="BodyText" parent="AppTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="SpecialText" parent="AppTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="SpecialText.Green" parent="SpecialText">
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpecialText.Blue" parent="SpecialText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SpecialText.Date" parent="SpecialText">
        <item name="android:textColor">@color/cream</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
