<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- تم اصلی اپلیکیشن -->
    <style name="Theme.ElectricShutterCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorSuccess</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- رنگ پس‌زمینه -->
        <item name="android:windowBackground">@color/colorSurface</item>

        <!-- فونت پیش‌فرض -->
        <item name="android:fontFamily">@font/roboto</item>

        <!-- استایل دکمه‌ها -->
        <item name="materialButtonStyle">@style/Widget.App.PrimaryButton</item>

        <!-- استایل کارت‌ها -->
        <item name="materialCardViewStyle">@style/Widget.App.MaterialCard</item>
    </style>

</resources>
