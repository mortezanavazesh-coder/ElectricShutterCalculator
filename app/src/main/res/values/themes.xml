<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- تم اصلی اپ -->
    <style name="Theme.ElectricShutterCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- رنگ‌های سطح و پس‌زمینه -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceSecondary</item>

        <!-- رنگ‌های وضعیت -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>

        <!-- فونت پیش‌فرض -->
        <item name="android:fontFamily">@font/sans_serif</item>

        <!-- رنگ متن پیش‌فرض -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- تم برای دکمه‌ها -->
    <style name="Theme.ElectricShutterCalculator.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- تم برای کارت‌ها -->
    <style name="Theme.ElectricShutterCalculator.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card</item>
    </style>

</resources>
