<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- تم اصلی اپلیکیشن -->
    <style name="AppTheme.DarkBlue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">@color/colorPrimary</item>        <!-- آبی -->
        <item name="colorPrimaryVariant">@color/colorCardBackground</item> <!-- مشکی روشن‌تر -->
        <item name="colorSecondary">@color/colorSecondary</item>    <!-- فیروزه‌ای -->

        <!-- رنگ‌های متن -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item> <!-- سفید -->
        <item name="android:textColorSecondary">@color/colorTextHint</item>  <!-- خاکستری روشن -->

        <!-- رنگ پس‌زمینه -->
        <item name="android:windowBackground">@color/colorBackground</item> <!-- مشکی -->

        <!-- کنترل‌ها -->
        <item name="materialButtonStyle">@style/Widget.App.PrimaryButton</item>
        <item name="editTextStyle">@style/Widget.App.EditText</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>

    <!-- استایل کارت‌ها -->
    <style name="Widget.App.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="strokeColor">@color/colorCardStroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- استایل متن‌ها -->
    <style name="BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item> <!-- سفید -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorCardTitle</item> <!-- کرم -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DateText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorDate</item> <!-- کرم -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomerNumberText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorCustomerNumber</item> <!-- آبی -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FinalPriceText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorFinalPrice</item> <!-- سبز -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- استایل کنترل‌ها -->
    <style name="Widget.App.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:hintTextColor">@color/colorTextHint</item>
    </style>

    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorCardBackground</item>
        <item name="hintTextColor">@color/colorTextHint</item>
    </style>

    <style name="Widget.App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@color/colorCardBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="buttonTint">@color/colorPrimary</item>
    </style>
</resources>
