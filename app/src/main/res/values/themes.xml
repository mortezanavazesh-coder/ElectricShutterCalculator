<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- تم اصلی اپلیکیشن -->
    <style name="AppTheme.DarkBlue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- رنگ‌های متن -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextHint</item>
        <item name="android:textColorHint">@color/colorTextHint</item>

        <!-- رنگ پس‌زمینه -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- کنترل‌ها -->
        <item name="materialButtonStyle">@style/Widget.App.PrimaryButton</item>
        <item name="editTextStyle">@style/Widget.App.EditText</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <!-- تم دیالوگ‌ها -->
        <item name="alertDialogTheme">@style/AppAlertDialogTheme</item>
    </style>

    <!-- تم اختصاصی دیالوگ -->
    <style name="AppAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBackgroundColor">@color/colorCardBackground</item>
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetTop">0dp</item>
        <item name="backgroundInsetBottom">0dp</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleText</item>
    </style>

</resources>
