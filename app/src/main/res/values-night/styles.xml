<resources>

    <!-- استایل کلی اپ -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- رنگ‌های اصلی -->
        <item name="colorPrimary">#90CAF9</item>
        <item name="colorPrimaryVariant">#64B5F6</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFB74D</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <!-- استایل کارت -->
    <style name="CardStyle">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- استایل دکمه اصلی -->
    <style name="PrimaryButton">
        <item name="android:backgroundTint">#90CAF9</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
