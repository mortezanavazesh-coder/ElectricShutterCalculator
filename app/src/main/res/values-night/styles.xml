<resources>

    <!-- استایل عنوان‌های بخش‌ها در حالت تاریک -->
    <style name="SectionTitle.Dark">
        <item name="android:textColor">@color/colorPrimary</item> <!-- آبی روشن برای تیتر -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:fontFamily">@font/iran_yekan</item>
    </style>

    <!-- استایل دکمه‌ها در حالت تاریک -->
    <style name="PrimaryButton.Dark">
        <item name="android:background">@color/colorSecondary</item> <!-- نارنجی ملایم برای دکمه -->
        <item name="android:textColor">@color/black</item> <!-- متن مشکی روی دکمه نارنجی -->
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/iran_yekan</item>
    </style>

</resources>
