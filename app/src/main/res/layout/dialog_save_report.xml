<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSurface">

    <!-- عنوان گزارش -->
    <EditText
        android:id="@+id/etReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عنوان گزارش"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- توضیحات گزارش -->
    <EditText
        android:id="@+id/etReportDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="توضیحات (اختیاری)"
        android:inputType="textMultiLine"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:minLines="3"
        android:ellipsize="end"/>

    <!-- دکمه ذخیره -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.App.PrimaryButton"
        android:id="@+id/buttonSaveReport"
        android:text="ذخیره گزارش"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
