<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/App.PageSection"
    android:padding="@dimen/space_md"
    android:layout_gravity="center"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- نام مشتری -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:hint="@string/dialog_report_customer_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCustomerName"
            style="@style/Widget.App.TextBox.EditText"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- شماره موبایل -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:hint="@string/dialog_report_customer_phone"
        android:layout_marginTop="@dimen/space_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCustomerPhone"
            style="@style/Widget.App.TextBox.EditText"
            android:inputType="phone"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- دکمه‌ها -->
    <LinearLayout
        style="@style/App.PageSection"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/space_lg">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.App.PrimaryButton"
            android:text="@string/btn_cancel"
            android:layout_marginEnd="@dimen/space_sm"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.App.PrimaryButton"
            android:text="@string/btn_save"/>
    </LinearLayout>
</LinearLayout>
