<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ارتفاع کرکره -->
    <EditText android:id="@+id/inputHeight" android:hint="ارتفاع کرکره (سانتی‌متر)" />

    <!-- انتخاب تیغه -->
    <Spinner android:id="@+id/bladeSpinner" />

    <!-- نمایش ضخامت و ارتفاع تیغه -->
    <TextView android:id="@+id/bladeInfo" android:text="ضخامت: ... | ارتفاع: ..." />

    <!-- نمایش تعداد تیغه‌ها -->
    <TextView android:id="@+id/bladeCount" android:text="تعداد تیغه‌ها: ..." />

    <!-- نمایش قطر رول -->
    <TextView android:id="@+id/rollResult" android:text="قطر رول: ..." />

    <!-- دکمه‌ها -->
    <Button android:id="@+id/calculateRoll" android:text="محاسبه قطر رول" />
    <Button android:id="@+id/backToMain" android:text="بازگشت به صفحه اصلی" />
</LinearLayout>
