<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/App.PageSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_md"
    android:layout_gravity="center"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- عنوان آیتم -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_item_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etItemTitle"
            style="@style/Widget.App.TextBox.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- قیمت آیتم -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_item_price"
        android:layout_marginTop="@dimen/space_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etItemPrice"
            style="@style/Widget.App.TextBox.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- دکمه‌ها -->
    <LinearLayout
        style="@style/App.PageSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/space_lg">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelItem"
            style="@style/Widget.App.PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:layout_marginEnd="@dimen/space_sm"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveItem"
            style="@style/Widget.App.PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"/>
    </LinearLayout>
</LinearLayout>
