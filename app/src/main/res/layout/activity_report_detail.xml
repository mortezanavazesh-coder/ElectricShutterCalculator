<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/App.PageContainer"
    android:fillViewport="true">

    <LinearLayout style="@style/App.PageSection">

        <!-- کارت اطلاعات مشتری -->
        <com.google.android.material.card.MaterialCardView style="@style/Widget.App.MaterialCard">
            <LinearLayout style="@style/App.PageSection" android:padding="@dimen/space_sm">

                <TextView style="@style/CardTitleText" android:id="@+id/tvCustomerName"/>
                <TextView style="@style/CustomerNumberText" android:id="@+id/tvCustomerPhone" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/DateText" android:id="@+id/tvDate" android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت ابعاد -->
        <com.google.android.material.card.MaterialCardView style="@style/Widget.App.MaterialCard" android:layout_marginTop="@dimen/space_md">
            <LinearLayout style="@style/App.PageSection" android:padding="@dimen/space_sm">

                <TextView style="@style/BodyText" android:id="@+id/tvHeight"/>
                <TextView style="@style/BodyText" android:id="@+id/tvWidth" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvArea" android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت قطعات و هزینه‌ها -->
        <com.google.android.material.card.MaterialCardView style="@style/Widget.App.MaterialCard" android:layout_marginTop="@dimen/space_md">
            <LinearLayout style="@style/App.PageSection" android:padding="@dimen/space_sm">

                <TextView style="@style/CardTitleText" android:id="@+id/tvBlade"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvMotor" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvShaft" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvBox" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvInstall" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvWelding" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvTransport" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/CardTitleText" android:id="@+id/tvExtras" android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت ریز محاسبات -->
        <com.google.android.material.card.MaterialCardView style="@style/Widget.App.MaterialCard" android:layout_marginTop="@dimen/space_md">
            <LinearLayout style="@style/App.PageSection" android:padding="@dimen/space_sm">

                <TextView style="@style/BodyText" android:id="@+id/tvBreakBlade"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakMotor" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakShaft" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakBox" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakInstall" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakWelding" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakTransport" android:layout_marginTop="@dimen/space_md"/>
                <TextView style="@style/BodyText" android:id="@+id/tvBreakExtras" android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت قیمت نهایی -->
        <com.google.android.material.card.MaterialCardView style="@style/Widget.App.MaterialCard" android:layout_marginTop="@dimen/space_md">
            <LinearLayout style="@style/App.PageSection" android:padding="@dimen/space_sm">

                <TextView style="@style/FinalPriceText" android:id="@+id/tvTotal" android:text="قیمت نهایی: -"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- دکمه بازگشت -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.PrimaryButton"
            android:id="@+id/buttonBackToReports"
            android:text="بازگشت به گزارشات"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
