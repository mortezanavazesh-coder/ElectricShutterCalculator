<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- کارت اطلاعات مشتری -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    style="@style/TitleText"
                    android:id="@+id/tvCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

                <TextView
                    style="@style/SpecialText.Blue"
                    android:id="@+id/tvCustomerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

                <TextView
                    style="@style/SpecialText.Date"
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت ابعاد -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    style="@style/BodyText"
                    android:id="@+id/tvHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

                <TextView
                    style="@style/BodyText"
                    android:id="@+id/tvWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

                <TextView
                    style="@style/BodyText"
                    android:id="@+id/tvArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت قطعات و هزینه‌ها -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- همه TextViewهای قطعات مشابه همین با ellipsize="end" و paddingStart/End -->
                <TextView
                    style="@style/TitleText"
                    android:id="@+id/tvBlade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <!-- بقیه TextViewها (Motor, Shaft, Box, Install, Welding, Transport, Extras) مشابه همین -->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت ریز محاسبات -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <!-- همه TextViewهای ریز محاسبات مشابه همین -->
                <TextView
                    style="@style/BodyText"
                    android:id="@+id/tvBreakBlade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
                <!-- بقیه TextViewها (BreakMotor, BreakShaft, ...) مشابه همین -->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت قیمت نهایی -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    style="@style/SpecialText.Green"
                    android:id="@+id/tvTotal"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- دکمه بازگشت -->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.App.PrimaryButton"
            android:id="@+id/buttonBackToReports"
            android:text="بازگشت به گزارشات"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>
