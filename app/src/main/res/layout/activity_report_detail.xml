<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- کارت اطلاعات مشتری -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:id="@+id/tvCustomerName"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/tvCustomerPhone"
                android:textColor="@color/blue"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/tvDate"/>
        </LinearLayout>

        <!-- کارت ابعاد -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView style="@style/BodyText" android:id="@+id/tvHeight"/>
            <TextView style="@style/BodyText" android:id="@+id/tvWidth"/>
            <TextView style="@style/BodyText" android:id="@+id/tvArea"/>
        </LinearLayout>

        <!-- کارت قطعات و هزینه‌ها -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView style="@style/TitleText" android:id="@+id/tvBlade"/>
            <TextView style="@style/TitleText" android:id="@+id/tvMotor"/>
            <TextView style="@style/TitleText" android:id="@+id/tvShaft"/>
            <TextView style="@style/TitleText" android:id="@+id/tvBox"/>
            <TextView style="@style/TitleText" android:id="@+id/tvInstall"/>
            <TextView style="@style/TitleText" android:id="@+id/tvWelding"/>
            <TextView style="@style/TitleText" android:id="@+id/tvTransport"/>
            <TextView style="@style/TitleText" android:id="@+id/tvExtras"/>
        </LinearLayout>

        <!-- کارت ریز محاسبات -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView style="@style/BodyText" android:id="@+id/tvBreakBlade"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakMotor"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakShaft"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakBox"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakInstall"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakWelding"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakTransport"/>
            <TextView style="@style/BodyText" android:id="@+id/tvBreakExtras"/>
        </LinearLayout>

        <!-- کارت قیمت نهایی -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:id="@+id/tvTotal"
                android:textSize="18sp"
                android:textColor="@color/colorSuccess"/>
        </LinearLayout>

        <!-- دکمه بازگشت -->
        <Button
            style="@style/PrimaryButton"
            android:id="@+id/buttonBackToReports"
            android:text="بازگشت به گزارشات"/>
    </LinearLayout>
</ScrollView>
