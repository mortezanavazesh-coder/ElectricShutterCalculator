<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootReports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- عنوان گزارش جدید -->
    <EditText
        android:id="@+id/etReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عنوان گزارش"
        android:inputType="text"
        android:padding="8dp"
        android:background="@android:drawable/edit_text" />

    <!-- دکمه افزودن گزارش -->
    <Button
        android:id="@+id/btnAddReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="افزودن گزارش"
        android:layout_marginTop="8dp" />

    <!-- متن خالی بودن لیست -->
    <TextView
        android:id="@+id/emptyReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="هیچ گزارشی موجود نیست"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="12dp" />

    <!-- لیست گزارش‌ها -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp" />

</LinearLayout>
