<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- کارت ورودی -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/BodyText"
                android:text="ارتفاع (cm)"/>

            <EditText
                android:id="@+id/inputHeight"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:text="انتخاب تیغه"/>

            <Spinner
                android:id="@+id/spinnerBlade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:text="انتخاب شفت"/>

            <Spinner
                android:id="@+id/spinnerShaft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- کارت خروجی‌های میانی -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/BodyText"
                android:id="@+id/textTotalBlades"
                android:text="تعداد تیغه: -"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/textFullRounds"
                android:text="تعداد دور کامل: -"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/textPartialRound"
                android:text="دور ناقص: -"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/textRemainingBlades"
                android:text="تیغه‌های باقی‌مانده: -"/>
        </LinearLayout>

        <!-- کارت خروجی نهایی -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:id="@+id/textRollDiameter"
                android:text="قطر رول: - cm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorSuccess"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonCalculateRoll"
                android:text="محاسبه قطر رول"
                android:layout_marginTop="12dp"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonBackToMain"
                android:text="بازگشت به صفحه اصلی"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
