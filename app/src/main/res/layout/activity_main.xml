<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dimensions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ابعاد (سانتی‌متر)"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputHeightCm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="ارتفاع (cm)"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/inputWidthCm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="عرض (cm)"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textAreaM2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مساحت: 0.000 متر مربع"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"/>

        <!-- Blade -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تیغه"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <Spinner
                android:id="@+id/spinnerBlade"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textBladeLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تیغه — محاسبه"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Motor -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="موتور" android:textStyle="bold"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingBottom="8dp">
            <Spinner
                android:id="@+id/spinnerMotor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textMotorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="موتور — محاسبه"/>
        </LinearLayout>

        <!-- Shaft -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="شفت" android:textStyle="bold"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingBottom="8dp">
            <Spinner
                android:id="@+id/spinnerShaft"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textShaftLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شفت — محاسبه"/>
        </LinearLayout>

        <!-- Box -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="8dp" android:paddingBottom="8dp">
            <CheckBox
                android:id="@+id/checkboxBoxEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قوطی فعال"/>
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spinnerBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textBoxLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="قوطی — محاسبه نشده"
            android:paddingBottom="12dp"/>

        <!-- Editable base prices -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="قیمت‌های پایه (تومان)" android:textStyle="bold" android:paddingTop="8dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <EditText
                android:id="@+id/inputInstallPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="نرخ نصب"/>
            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/inputWeldingPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="نرخ جوشکاری"/>
        </LinearLayout>

        <EditText
            android:id="@+id/inputTransportPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="کرایه حمل"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textInstallComputed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نصب (محاسبه): 0 تومان"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"/>

        <!-- Extras container -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="گزینه‌های اضافی" android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/extrasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"/>

        <!-- Breakdown -->
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ریز محاسبات" android:textStyle="bold"/>
        <TextView
            android:id="@+id/textBreakBlade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جمع تیغه: -"/>
        <TextView
            android:id="@+id/textBreakMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="موتور: -"/>
        <TextView
            android:id="@+id/textBreakShaft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جمع شفت: -"/>
        <TextView
            android:id="@+id/textBreakBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جمع قوطی: -"/>
        <TextView
            android:id="@+id/textBreakInstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نصب: -"/>
        <TextView
            android:id="@+id/textBreakWelding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جوشکاری: -"/>
        <TextView
            android:id="@+id/textBreakTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کرایه حمل: -"/>
        <TextView
            android:id="@+id/textBreakExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اضافات: -"
            android:paddingBottom="12dp"/>

        <!-- Total -->
        <TextView
            android:id="@+id/textTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="قیمت نهایی: 0 تومان"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            android:textSize="16sp"/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/buttonBasePrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="قیمت‌های پایه"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonRollDiameter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="قطر رول"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/buttonSaveReport"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ذخیره گزارش"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonReports"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="گزارش‌ها"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
