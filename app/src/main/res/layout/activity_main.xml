<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ابعاد -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ارتفاع (cm)" />
            <EditText android:id="@+id/inputHeightCm" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="عرض (cm)" android:paddingTop="6dp"/>
            <EditText android:id="@+id/inputWidthCm" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>

            <TextView android:id="@+id/textAreaM2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="مساحت: 0.000 متر مربع" android:paddingTop="6dp"/>

            <View android:layout_width="match_parent" android:layout_height="12dp"/>

            <!-- تیغه -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="تیغه" android:textStyle="bold"/>
            <Spinner android:id="@+id/spinnerBlade" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/textBladeLine" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="تیغه — قیمت پایه: - | قیمت کل: -"/>

            <View android:layout_width="match_parent" android:layout_height="8dp" />

            <!-- موتور -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="موتور" android:textStyle="bold"/>
            <Spinner android:id="@+id/spinnerMotor" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/textMotorLine" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="موتور — قیمت: -"/>

            <View android:layout_width="match_parent" android:layout_height="8dp" />

            <!-- شفت -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="شفت" android:textStyle="bold"/>
            <Spinner android:id="@+id/spinnerShaft" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/textShaftLine" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="شفت — قیمت پایه: - | قیمت کل: -"/>

            <View android:layout_width="match_parent" android:layout_height="8dp" />

            <!-- قوطی -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                <CheckBox android:id="@+id/checkboxBoxEnabled" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="محاسبه قوطی" />
            </LinearLayout>
            <Spinner android:id="@+id/spinnerBox" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/textBoxLine" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="قوطی — محاسبه نشده"/>

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- هزینه های قابل ویرایش در صفحه اصلی -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="نرخ نصب (تومان به ازای هر متر مربع)" android:textStyle="bold"/>
            <EditText android:id="@+id/inputInstallPrice" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="هزینه نصب محاسبه شده" android:paddingTop="6dp"/>
            <TextView android:id="@+id/textInstallComputed" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="0 تومان" android:padding="10dp" android:background="@android:color/transparent"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="قیمت جوشکاری (تومان)" android:textStyle="bold" android:paddingTop="6dp"/>
            <EditText android:id="@+id/inputWeldingPrice" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="کرایه حمل (تومان)" android:textStyle="bold" android:paddingTop="6dp"/>
            <EditText android:id="@+id/inputTransportPrice" android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="numberDecimal"/>

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- چک باکس های اضافی (بعد از کرایه حمل) -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="گزینه‌های اضافی" android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/extrasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- ریز محاسبات -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ریز محاسبات" android:textStyle="bold"/>
            <TextView android:id="@+id/textBreakBlade" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="جمع تیغه: -"/>
            <TextView android:id="@+id/textBreakMotor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="موتور: -"/>
            <TextView android:id="@+id/textBreakShaft" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="جمع شفت: -"/>
            <TextView android:id="@+id/textBreakBox" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="جمع قوطی: -"/>
            <TextView android:id="@+id/textBreakInstall" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="نصب: -"/>
            <TextView android:id="@+id/textBreakWelding" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="جوشکاری: -"/>
            <TextView android:id="@+id/textBreakTransport" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="کرایه حمل: -"/>
            <TextView android:id="@+id/textBreakExtras" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="گزینه‌های اضافی: -"/>

            <View android:layout_width="match_parent" android:layout_height="12dp" />

            <!-- قیمت نهایی (جدای از مساحت) -->
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="قیمت نهایی: -"
                android:paddingTop="6dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <View android:layout_width="match_parent" android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>

    <!-- buttons pinned to bottom so always visible -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="4dp">

        <Button
            android:id="@+id/buttonBasePrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="صفحه قیمت پایه"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/buttonRollDiameter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="صفحه قطر رول"/>

    </LinearLayout>

</FrameLayout>
