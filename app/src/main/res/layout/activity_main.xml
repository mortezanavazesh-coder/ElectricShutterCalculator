<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- اسکرول محتوای اصلی -->
    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- کارت ابعاد -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="ابعاد کرکره" android:textStyle="bold" android:textSize="16sp"/>
                    <TextView android:text="ارتفاع (cm)" />
                    <EditText
                        android:id="@+id/inputHeightCm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                    <TextView android:text="عرض (cm)" android:paddingTop="6dp"/>
                    <EditText
                        android:id="@+id/inputWidthCm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                    <TextView
                        android:id="@+id/textAreaM2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مساحت: 0.000 متر مربع"
                        android:paddingTop="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت تیغه -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="انتخاب تیغه" android:textStyle="bold" android:textSize="16sp"/>
                    <Spinner
                        android:id="@+id/spinnerBlade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textBladeLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تیغه — قیمت پایه: - | قیمت کل: -"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت موتور -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="انتخاب موتور" android:textStyle="bold" android:textSize="16sp"/>
                    <Spinner
                        android:id="@+id/spinnerMotor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textMotorLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="موتور — قیمت: -"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت شفت -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="انتخاب شفت" android:textStyle="bold" android:textSize="16sp"/>
                    <Spinner
                        android:id="@+id/spinnerShaft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textShaftLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="شفت — قیمت پایه: - | قیمت کل: -"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت قوطی -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="انتخاب قوطی" android:textStyle="bold" android:textSize="16sp"/>
                    <CheckBox
                        android:id="@+id/checkboxBoxEnabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="محاسبه قوطی"/>
                    <Spinner
                        android:id="@+id/spinnerBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textBoxLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="قوطی — محاسبه نشده"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت هزینه‌ها -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="هزینه‌های پایه" android:textStyle="bold" android:textSize="16sp"/>
                    <TextView android:text="نرخ نصب (تومان به ازای هر متر مربع)" />
                    <EditText
                        android:id="@+id/inputInstallPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                    <TextView android:text="هزینه نصب محاسبه شده" android:paddingTop="6dp"/>
                    <TextView
                        android:id="@+id/textInstallComputed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 تومان"/>
                    <TextView android:text="قیمت جوشکاری (تومان)" android:paddingTop="6dp"/>
                    <EditText
                        android:id="@+id/inputWeldingPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                    <TextView android:text="کرایه حمل (تومان)" android:paddingTop="6dp"/>
                    <EditText
                        android:id="@+id/inputTransportPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت گزینه‌های اضافی -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="گزینه‌های اضافی" android:textStyle="bold" android:textSize="16sp"/>
                    <LinearLayout
                        android:id="@+id/extrasContainer"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت ریز محاسبات -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="ریز محاسبات" android:textStyle="bold" android:textSize="16sp"/>
                    <TextView android:id="@+id/textBreakBlade" android:text="جمع تیغه: -"/>
                    <TextView android:id="@+id/textBreakMotor" android:text="موتور: -"/>
                    <TextView android:id="@+id/textBreakShaft" android:text="جمع شفت: -"/>
                    <TextView android:id="@+id/textBreakBox" android:text="جمع قوطی: -"/>
                    <TextView android:id="@+id/textBreakInstall" android:text="نصب: -"/>
                    <TextView android:id="@+id/textBreakWelding" android:text="جوشکاری: -"/>
                    <TextView android:id="@+id/textBreakTransport" android:text="کرایه حمل: -"/>
                    <TextView android:id="@+id/textBreakExtras" android:text="گزینه‌های اضافی: -"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- کارت قیمت نهایی -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="88dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:text="قیمت نهایی" android:textStyle="bold" android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/textTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="قیمت نهایی: -"
                        android:textSize="18sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- نوار دکمه‌های پایین یکپارچه -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- ردیف دکمه‌های با وزن برابر -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSaveReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ذخیره گزارش"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/buttonBasePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="صفحه قیمت پایه"/>
        </LinearLayout>

        <!-- دکمه‌های تمام‌عرض مطابق کد -->
        <Button
            android:id="@+id/buttonReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="صفحه گزارشات"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/buttonRollDiameter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="صفحه قطر رول"/>
    </LinearLayout>

</FrameLayout>
