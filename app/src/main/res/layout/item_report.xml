<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- عنوان گزارش (نام مشتری) -->
        <TextView
            android:id="@+id/textReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نام مشتری"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#212121" />

        <!-- تاریخ گزارش -->
        <TextView
            android:id="@+id/textReportDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تاریخ"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />

        <!-- جمع کل -->
        <TextView
            android:id="@+id/textReportPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جمع کل: 0"
            android:textSize="14sp"
            android:textColor="#1565C0"
            android:layout_marginTop="4dp" />

        <!-- دکمه حذف -->
        <ImageButton
            android:id="@+id/buttonDeleteReport"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="حذف گزارش"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
