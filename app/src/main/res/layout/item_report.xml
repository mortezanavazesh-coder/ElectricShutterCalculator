<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemReportRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginBottom="6dp">

    <!-- Row 1: name and date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCustomerName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="نام مشتری"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textReportDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1400/01/01"
            android:textSize="12sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Row 2: dimensions -->
    <TextView
        android:id="@+id/textDimensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="200 x 150 cm"
        android:textSize="14sp"
        android:paddingTop="6dp" />

    <!-- Row 3: breakdown (single-line preview, trimmed) -->
    <TextView
        android:id="@+id/textBreakdownPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ریز محاسبات..."
        android:maxLines="3"
        android:ellipsize="end"
        android:paddingTop="6dp" />

    <!-- Row 4: total and delete button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/textTotalPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="۱۲,۳۴۵ تومان"
            android:textStyle="bold"
            android:textSize="14sp" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حذف" />
    </LinearLayout>
</LinearLayout>
