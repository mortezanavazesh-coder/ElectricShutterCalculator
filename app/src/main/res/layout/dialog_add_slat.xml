<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/App.PageSection"
    android:padding="@dimen/space_md"
    android:layout_gravity="center"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- عنوان تیغه -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:hint="@string/dialog_slat_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSlatTitle"
            style="@style/Widget.App.TextBox.EditText"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- قیمت تیغه -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:hint="@string/dialog_slat_price"
        android:layout_marginTop="@dimen/space_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSlatPrice"
            style="@style/Widget.App.TextBox.EditText"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- عرض تیغه -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:hint="@string/dialog_slat_width"
        android:layout_marginTop="@dimen/space_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSlatWidth"
            style="@style/Widget.App.TextBox.EditText"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- ضخامت تیغه -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.App.TextBox"
        android:hint="@string/dialog_slat_thickness"
        android:layout_marginTop="@dimen/space_md">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSlatThickness"
            style="@style/Widget.App.TextBox.EditText"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:ellipsize="end"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- دکمه‌ها -->
    <LinearLayout
        style="@style/App.PageSection"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/space_lg">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelSlat"
            style="@style/Widget.App.PrimaryButton"
            android:text="@string/btn_cancel"
            android:layout_marginEnd="@dimen/space_sm"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveSlat"
            style="@style/Widget.App.PrimaryButton"
            android:text="@string/btn_save"/>
    </LinearLayout>
</LinearLayout>
