<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_dark">

    <!-- عنوان تیغه -->
    <EditText
        android:id="@+id/etSlatTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="عنوان تیغه"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- قیمت تیغه -->
    <EditText
        android:id="@+id/etSlatPrice"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="قیمت تیغه (ت)"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- عرض تیغه -->
    <EditText
        android:id="@+id/etSlatWidth"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="عرض تیغه (سانتی‌متر)"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- ضخامت تیغه -->
    <EditText
        android:id="@+id/etSlatThickness"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="ضخامت تیغه (سانتی‌متر)"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- دکمه‌ها -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnCancelSlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لغو"
            style="?attr/materialButtonOutlinedStyle"/>

        <Button
            android:id="@+id/btnSaveSlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ذخیره"
            android:layout_marginStart="8dp"
            style="?attr/materialButtonOutlinedStyle"/>
    </LinearLayout>
</LinearLayout>
