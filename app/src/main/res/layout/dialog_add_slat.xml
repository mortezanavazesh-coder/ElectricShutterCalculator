<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_dark">

    <!-- عنوان تیغه -->
    <EditText
        android:id="@+id/etSlatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عنوان تیغه"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- قیمت تیغه -->
    <EditText
        android:id="@+id/etSlatPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="قیمت تیغه (ت)"
        android:inputType="numberDecimal"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- عرض تیغه -->
    <EditText
        android:id="@+id/etSlatWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عرض تیغه (سانتی‌متر)"
        android:inputType="numberDecimal"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- ضخامت تیغه -->
    <EditText
        android:id="@+id/etSlatThickness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ضخامت تیغه (سانتی‌متر)"
        android:inputType="numberDecimal"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>
</LinearLayout>
