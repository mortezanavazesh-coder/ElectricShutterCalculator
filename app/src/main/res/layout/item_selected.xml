<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/colorCardBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <!-- نام آیتم -->
        <TextView
            android:id="@+id/selName"
            style="@style/BodyText"
            android:text="نام آیتم"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"/>

        <!-- تعداد -->
        <TextView
            android:id="@+id/selCount"
            style="@style/BodyText"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorCardTitle"/>
    </LinearLayout>

    <!-- قیمت واحد -->
    <TextView
        android:id="@+id/selUnit"
        style="@style/BodyText"
        android:text="قیمت واحد"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- جمع کل -->
    <TextView
        android:id="@+id/selTotal"
        style="@style/FinalPriceText"
        android:text="جمع"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- دکمه ویرایش -->
    <ImageButton
        android:id="@+id/selEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit_square_green"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="ویرایش"
        android:tint="@color/colorIconEdit"/>

    <!-- دکمه حذف -->
    <ImageButton
        android:id="@+id/selDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_circle_red"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="حذف"
        android:layout_marginStart="12dp"
        android:tint="@color/colorIconEdit"/>
</LinearLayout>
