<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selName"
            android:text="نام آیتم"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/selCount"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/selUnit"
        android:text="قیمت واحد"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/selTotal"
        android:text="جمع"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"/>

    <ImageButton
        android:id="@+id/selEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_edit_square_green"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="ویرایش"
        android:tint="@null" />

    <ImageButton
        android:id="@+id/selDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_circle_red"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="حذف"
        android:layout_marginStart="8dp"
        android:tint="@null" />

</LinearLayout>
