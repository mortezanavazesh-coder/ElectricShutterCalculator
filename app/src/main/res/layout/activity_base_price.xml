<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- کارت تیغه‌ها -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddSlat"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن تیغه"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/blue"/>

                    <TextView
                        style="@style/TitleText"
                        android:text="انتخاب تیغه"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptySlats"
                    style="@style/BodyText"
                    android:text="هیچ تیغه‌ای موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSlats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت موتور -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddMotor"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن موتور"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/blue"/>

                    <TextView
                        style="@style/TitleText"
                        android:text="انتخاب موتور"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyMotors"
                    style="@style/BodyText"
                    android:text="هیچ موتوری موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMotors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت شفت -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddShaft"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن شفت"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/blue"/>

                    <TextView
                        style="@style/TitleText"
                        android:text="انتخاب شفت"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyShafts"
                    style="@style/BodyText"
                    android:text="هیچ شفتی موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvShafts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت قوطی -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddBox"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن قوطی"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/blue"/>

                    <TextView
                        style="@style/TitleText"
                        android:text="انتخاب قوطی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyBoxes"
                    style="@style/BodyText"
                    android:text="هیچ قوطی‌ای موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت اضافات -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddExtra"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن گزینه"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/blue"/>

                    <TextView
                        style="@style/TitleText"
                        android:text="انتخاب گزینه اضافی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyExtras"
                    style="@style/BodyText"
                    android:text="هیچ گزینه‌ای موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvExtras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت هزینه‌های پایه -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- نصب -->
                <TextView
                    style="@style/BodyText"
                    android:text="هزینه نصب (تومان به ازای هر متر مربع)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/inputInstallBase"
                    style="@style/Widget.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="مثال: 250000"
                    android:layout_marginTop="12dp"/>

                <!-- جوشکاری -->
                <TextView
                    style="@style/BodyText"
                    android:text="جوشکاری (تومان)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/inputWeldingBase"
                    style="@style/Widget.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="مثال: 180000"
                    android:layout_marginTop="12dp"/>

                <!-- کرایه حمل -->
                <TextView
                    style="@style/BodyText"
                    android:text="کرایه حمل (تومان)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

                <EditText
                    android:id="@+id/inputTransportBase"
                    style="@style/Widget.App.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="مثال: 120000"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- دکمه‌ها خارج از کارت‌ها -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="88dp">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.PrimaryButton"
                android:id="@+id/buttonSaveAll"
                android:text="ذخیرهٔ همه"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.PrimaryButton"
                android:id="@+id/buttonBack"
                android:text="بازگشت"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
