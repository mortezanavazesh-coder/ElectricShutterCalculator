<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- کارت تیغه‌ها -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:text="انتخاب تیغه"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonAddSlat"
                android:text="افزودن تیغه"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/emptySlats"
                android:text="تیغه‌ای موجود نیست"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSlats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

        <!-- کارت موتور -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:text="انتخاب موتور"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonAddMotor"
                android:text="افزودن موتور"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/emptyMotors"
                android:text="موتوری موجود نیست"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMotors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

        <!-- کارت شفت -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:text="انتخاب شفت"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonAddShaft"
                android:text="افزودن شفت"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/emptyShafts"
                android:text="شفتی موجود نیست"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvShafts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

        <!-- کارت قوطی -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:text="انتخاب قوطی"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonAddBox"
                android:text="افزودن قوطی"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/emptyBoxes"
                android:text="قوطی‌ای موجود نیست"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBoxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

        <!-- کارت اضافات -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TitleText"
                android:text="انتخاب گزینه اضافی"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                style="@style/PrimaryButton"
                android:id="@+id/buttonAddExtra"
                android:text="افزودن گزینه"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:id="@+id/emptyExtras"
                android:text="گزینه‌ای موجود نیست"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvExtras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

        <!-- کارت هزینه‌های پایه -->
        <LinearLayout
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp">

            <TextView
                style="@style/TitleText"
                android:text="هزینه‌های اجرایی"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/BodyText"
                android:text="هزینه نصب (تومان به ازای هر متر مربع)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/inputInstallBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

            <TextView
                style="@style/BodyText"
                android:text="جوشکاری (تومان)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/inputWeldingBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

            <TextView
                style="@style/BodyText"
                android:text="کرایه حمل (تومان)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/inputTransportBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="16dp">

                <Button
                    style="@style/PrimaryButton"
                    android:id="@+id/buttonSaveAll"
                    android:text="ذخیرهٔ همه"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    style="@style/PrimaryButton"
                    android:id="@+id/buttonBack"
                    android:text="بازگشت"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
