<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:padding="@dimen/space_sm">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- کارت تیغه‌ها -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/space_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddSlat"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن تیغه"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        style="@style/CardTitleText"
                        android:text="افزودن تیغه"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_md"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptySlats"
                    style="@style/BodyText"
                    android:text="هیچ تیغه‌ای موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/space_md"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSlats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت موتور -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/space_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddMotor"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن موتور"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        style="@style/CardTitleText"
                        android:text="افزودن موتور"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_md"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyMotors"
                    style="@style/BodyText"
                    android:text="هیچ موتوری موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/space_md"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMotors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت شفت -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/space_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddShaft"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن شفت"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        style="@style/CardTitleText"
                        android:text="افزودن شفت"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_md"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyShafts"
                    style="@style/BodyText"
                    android:text="هیچ شفتی موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/space_md"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvShafts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت قوطی -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/space_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddBox"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن قوطی"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        style="@style/CardTitleText"
                        android:text="افزودن قوطی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_md"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyBoxes"
                    style="@style/BodyText"
                    android:text="هیچ قوطی‌ای موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/space_md"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت اضافات -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/space_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- هدر -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/buttonAddExtra"
                        android:src="@drawable/ic_add"
                        android:contentDescription="افزودن گزینه اضافی"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="?attr/colorPrimary"/>

                    <TextView
                        style="@style/CardTitleText"
                        android:text="افزودن گزینه اضافی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_md"/>
                </LinearLayout>

                <!-- پیام خالی -->
                <TextView
                    android:id="@+id/emptyExtras"
                    style="@style/BodyText"
                    android:text="هیچ گزینه‌ای موجود نیست"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/space_md"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- لیست -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvExtras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/space_md"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- کارت هزینه‌های پایه -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.MaterialCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/space_sm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- نصب -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="هزینه نصب (تومان به ازای هر متر مربع)"
                    android:layout_marginTop="@dimen/space_md">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputInstallBase"
                        style="@style/Widget.App.TextBox.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- جوشکاری -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="جوشکاری (تومان)"
                    android:layout_marginTop="@dimen/space_md">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputWeldingBase"
                        style="@style/Widget.App.TextBox.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- کرایه حمل -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="کرایه حمل (تومان)"
                    android:layout_marginTop="@dimen/space_md">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTransportBase"
                        style="@style/Widget.App.TextBox.EditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- دکمه‌ها -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:layout_marginBottom="@dimen/space_xl">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.PrimaryButton"
                android:id="@+id/buttonSaveAll"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:text="ذخیرهٔ همه"/>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.PrimaryButton"
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:text="بازگشت"
                android:layout_marginStart="@dimen/space_md"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
