<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_dark">

    <!-- عنوان شفت -->
    <EditText
        android:id="@+id/etShaftTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عنوان شفت"
        android:inputType="textCapSentences"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- قیمت شفت -->
    <EditText
        android:id="@+id/etShaftPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="قیمت شفت (ت)"
        android:inputType="numberDecimal"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- قطر شفت -->
    <EditText
        android:id="@+id/etShaftDiameter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="قطر شفت (سانتی‌متر)"
        android:inputType="numberDecimal"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOnSurface"
        android:textColorHint="@color/colorOnSurfaceSecondary"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"/>
</LinearLayout>
